<h1>Movies#new</h1>
<p>Find me in app/views/movies/new.html.erb</p>

<%= form_with(model: @movie, local: true) do |f| %>

    <h4>タイトル</h4>
    <%= f.text_field :name %>

    <h4>説明</h4>
    <%= f.text_area :body %>

    <h4>画像</h4>
    <%= f.attachment_field :image %>

     <h4>ジャンル</h4>
    <%= collection_check_boxes(:movie, :genre_ids, Genre.all, :id, :genrename, include_hidden: false) do |b| %>
      <%= b.label { b.check_box + b.text } %>
    <% end %>

    <p><%= f.submit '投稿' %></p>

<% end %>