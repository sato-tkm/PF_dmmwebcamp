<div class="post-body">
  <%= attachment_image_tag @movie, :image %>
  <p>ショップ名：<%= @movie.name %></p>
  <p>説明：<%= @movie.body %></p>
  <p>投稿日時：<%= @movie.created_at.strftime('%Y/%m/%d') %></p>
</div>

<div class="comments">
<p>コメント件数：</p>
<% @movie.each do |movie_comment| %>
  <p><%= image_tag('sample-author1.jpg') %></p>
  <%= movie_comment.user.name %>
  <%= movie_comment.created_at.strftime('%Y/%m/%d') %><%= movie_comment.comment %>
<% end %>
</div>
<div class="new-comment">
<%= form_with(model:[@movie, @movie_comment], local: true) do |f| %>
  <%= f.text_area :comment, rows:'5',placeholder: "コメントをここに" %>
  <%= f.submit "送信する" %>
<% end %>
</div>